{
  "buildCommand": "npm run build",
  "outputDirectory": ".next",
  "framework": "nextjs",
  "installCommand": "npm install",
  "devCommand": "npm run dev",
  "regions": ["iad1"],
  "functions": {
    "src/app/api/**/*.ts": {
      "maxDuration": 30
    }
  },
  "crons": [
    {
      "path": "/api/cron/webinar-5hour-reminders",
      "schedule": "0 * * * *"
    },
    {
      "path": "/api/cron/webinar-30min-reminders",
      "schedule": "*/5 * * * *"
    },
    {
      "path": "/api/cron/webinar-live-notifications",
      "schedule": "*/2 * * * *"
    }
  ]
} 