if ! grep -qE "$commit_regex" "$1"; then
    echo "âŒ Formato de commit invÃ¡lido!"
    echo "ğŸ“ Formato esperado: tipo(alcance): descripciÃ³n"
    echo "ğŸ“‹ Tipos vÃ¡lidos: feat, fix, docs, style, refactor, test, chore"
