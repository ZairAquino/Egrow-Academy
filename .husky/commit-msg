#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

# Validar formato de mensaje de commit
# Formato: tipo(alcance): descripciÃ³n
# Ejemplos: feat(nav): agregar navegaciÃ³n responsive
#          fix(api): corregir error en endpoint
#          docs(readme): actualizar documentaciÃ³n

