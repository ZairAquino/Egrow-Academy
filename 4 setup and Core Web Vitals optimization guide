[32m+[m[32m        }[m
[32m+[m[32m        .course-card:hover {[m
[32m+[m[32m          transform: translateY(-4px);[m
[32m+[m[32m        }[m
[32m+[m[32m      `,[m
[32m+[m[32m    }}[m
[32m+[m[32m  />[m
[32m+[m[32m);[m
[32m+[m[32m```[m
