[32m+[m[32m  },[m
[32m+[m[32m  plugins: [],[m
[32m+[m[32m}[m
[32m+[m[32m```[m
[32m+[m
[32m+[m[32m#### CSS Cr√≠tico Inline[m
[32m+[m[32m```tsx[m
[32m+[m[32m// Componente para CSS cr√≠tico[m
[32m+[m[32mconst CriticalCSS = () => ([m
[32m+[m[32m  <style[m
[32m+[m[32m    dangerouslySetInnerHTML={{[m
[32m+[m[32m      __html: `[m
[32m+[m[32m        .hero-section {[m
